<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".ui.balloons.BalloonsFragment">

    <ImageView
        android:id="@+id/ballon1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="35dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/greenballoon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ballon2"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ballon2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="27dp"
        android:adjustViewBounds="true"
        android:src="@drawable/redballoon"
        app:layout_constraintBottom_toBottomOf="@id/ballon1"
        app:layout_constraintEnd_toStartOf="@id/ballon3"
        app:layout_constraintStart_toEndOf="@id/ballon1" />

    <ImageView
        android:id="@+id/ballon3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="26dp"
        android:adjustViewBounds="true"
        android:src="@drawable/pinkballoon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ballon4"
        app:layout_constraintStart_toEndOf="@id/ballon2" />

    <ImageView
        android:id="@+id/ballon4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/purpleballoon"
        app:layout_constraintBottom_toBottomOf="@id/ballon3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ballon3" />

</androidx.constraintlayout.widget.ConstraintLayout>